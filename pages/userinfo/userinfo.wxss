.box {
  padding-top: 100px;
}

.row {
  display: flex;
  flex-wrap: wrap;
  flex: 0 1 100%;
  align-items: center;
  text-align: center;
  justify-content: center;
  margin: 5px 15px;
  font-size: 13px;
}

.item-left {
  flex: 0 1 25%;
}

.item-right {
  flex: 0 1 75%;
}

input {
  border: 1px solid #968c8c7d;
  border-radius: 4px;
}

.disabled {
  background-color: #f5f5f5;
  border-color: #d9d9d9;
  box-shadow: none;
  cursor: not-allowed;
  opacity: 1;
}

.avatar {
  width: 50px;
  height: 50px;
  border-radius: 4px;
  border: 1px solid #968c8c7d;
}